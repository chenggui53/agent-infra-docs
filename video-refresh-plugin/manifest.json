{
  "manifest_version": 3,
  "name": "视频自动刷新学习助手",
  "version": "1.0.0",
  "description": "自动刷新网页上的视频，帮助学习视频内容",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "视频刷新助手"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
